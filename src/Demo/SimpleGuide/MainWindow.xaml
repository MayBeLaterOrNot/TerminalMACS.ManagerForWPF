<Window x:Class="SimpleGuide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleGuide"
        mc:Ignorable="d"
        Title="测试用户引导" Height="150" Width="300">
    <StackPanel>
        <Button Content="带边框窗体" Click="ShowNormalWindowWithGuide_Click" Width="100" Height="30" Margin="10" Style="{StaticResource CustomButtonStyle}"></Button>
        <Button Content="无边框窗体" Click="ShowWithoutBorderWindowWithGuide_Click" Width="100" Height="30" Margin="10" Style="{StaticResource CustomButtonStyle}"></Button>
    </StackPanel>
</Window>
