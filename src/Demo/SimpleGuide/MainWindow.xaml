<Window
    x:Class="SimpleGuide.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimpleGuide"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="测试引导"
    Width="1200"
    Height="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Canvas>
        <Image
            x:Name="imgPublic1"
            Width="200"
            Margin="160,80,0,0"
            Source="/Images/wechatpublic1.jpg" />
        <Image
            x:Name="imgPublic2"
            Width="200"
            Margin="420,340,0,0"
            Source="/Images/wechatpublic2.jpg" />
        <Button
            Canvas.Left="500"
            Canvas.Top="100"
            Width="100"
            Height="50"
            Click="ShowGuide_Click"
            Content="快出现引导"
            Style="{StaticResource CustomButtonStyle}" />
        <Image
            x:Name="imgOwner"
            Width="200"
            Margin="720,20,0,0"
            Source="/Images/siteowner.jpg" />
    </Canvas>
</Window>
