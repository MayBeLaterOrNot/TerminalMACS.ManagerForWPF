<Window
    x:Class="UserGuideForMVVM.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="测试用户引导（MVVM模式）"
    Width="600"
    Height="400"
    mc:Ignorable="d">
    <StackPanel>
        <Button
            x:Name="BtnNormal"
            Width="100"
            Height="30"
            Margin="10"
            Click="ShowNormalWindowWithGuide_Click"
            Content="带边框窗体"
            Tag="{Binding ShowNormalWindowGuide}"
            Style="{StaticResource CustomButtonStyle}" />
        <Button
            x:Name="BtnNoBorder"
            Width="100"
            Height="30"
            Margin="10"
            Click="ShowWithoutBorderWindowWithGuide_Click"
            Content="无边框窗体"
            Tag="{Binding ShowNoBorderWindowGuide}"
            Style="{StaticResource CustomButtonStyle}" />
    </StackPanel>
</Window>